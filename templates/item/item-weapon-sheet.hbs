<form class="{{cssClass}}" autocomplete="off">
  {{> "systems/channel-fear/templates/item/parts/simple-header.hbs"}}

  <section>
    <div class="flexrow">
      <div>
        <label for="ability-{{item.id}}">{{localize "CF.Global.Ability"}}</label>
        <select name="system.ability" id="ability-{{item.id}}" data-dtype="String">
          {{selectOptions abilitiesList selected=system.ability localize=true}}
        </select>
      </div>
      <div>
        <label for="category-{{item.id}}">{{localize "CF.Global.Category"}}</label>
        <select name="system.category" id="category-{{item.id}}" data-dtype="Number">
          {{selectOptions weaponsCategories selected=system.category localize=true}}
        </select>
      </div>
    </div>
    <div class="flexrow">
      <div>
        <label for="reroll-{{item.id}}">{{localize "CF.Global.Rerolls"}}</label>
        <select id="reroll-{{item.id}}" name="system.reroll" data-dtype="Number">
          {{selectOptions rerollOptions selected=system.reroll}}
        </select>
      </div>
    </div>
  </section>
</form>
