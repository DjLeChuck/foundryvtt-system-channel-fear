<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <div class="header-fields">
      <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
      <h1>
        <input name="name" type="text" value="{{item.name}}" placeholder="{{localize "CF.Global.Name"}}" />
      </h1>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <div class="resource">
      <label for="data.ability" class="resource-label">{{localize "CF.Global.Ability"}}</label>
      <div class="resource-content flexrow flex-center flex-between">
        <select name="data.ability" data-dtype="String">
          {{selectOptions abilitiesList selected=data.ability localize=true}}
        </select>
      </div>
      <label for="data.reroll" class="resource-label">{{localize "CF.Global.Rerolls"}}</label>
      <div class="resource-content flexrow flex-center flex-between">
        <input type="number" id="data.reroll" name="data.reroll" value="{{data.reroll}}" data-dtype="Number"
               min="1" max="3" />
      </div>
    </div>
  </section>
</form>
