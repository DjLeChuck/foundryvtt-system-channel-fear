<div class="abilities">
  <h1 class="block-title top-shadow">{{localize "CF.CharacterSheet.Abilities.Title"}}</h1>

  <div class="block-content">
    <div class="block-header-info small-info">
      {{{localize "CF.CharacterSheet.Abilities.MinMaxInfo" min='<strong>1</strong>' max='<strong></strong>'}}}
    </div>

    <div class="block-content-inner">
      {{#each data.abilities as |ability key|}}
        <div class="ability flex flex-group-center">
          <input type="text" id="data.abilities.{{key}}" name="data.abilities.{{key}}"
                 value="{{ability}}" data-dtype="Number" />
          <label for="data.abilities.{{key}}" class="resource-label rollable" data-roll="{{ability}}d6x6cs>3"
                 data-label="{{lookup ../abilitiesList key}}">{{lookup ../abilitiesList key}}</label>
        </div>
      {{/each}}

      <span class="small-info">
        <strong>{{localize "CF.CharacterSheet.Abilities.PointsToSpent"}}</strong>
        {{localize "CF.CharacterSheet.Abilities.PointsCost"}}
      </span>
    </div>
  </div>
</div>
