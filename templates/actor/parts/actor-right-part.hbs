<div class="flexcol">
  <div>
    <textarea name="data.biography" class="biography">{{data.biography}}</textarea>
  </div>

  <div class="stacked-blocks">
    {{> "systems/channel-fear/templates/actor/parts/actor-weapons.hbs"}}

    <div class="stacked-block reversed">
      <h1 class="block-title no-radius">{{localize "CF.CharacterSheet.Health.Title"}}</h1>

      <div class="block-content">
        <div class="block-header-info small-info align-right grid grid-4col mt-0">
          <div class="grid-span-3">
            {{{localize "CF.CharacterSheet.Health.MaxInfo"}}}
            <strong>6</strong>
          </div>
        </div>

        <div class="block-content-inner u-relative">
          <input type="text" id="data.attributes.health" name="data.attributes.health"
                 value="{{data.attributes.health}}" data-dtype="Number" class="attribute-input" min="0" max="6" />

          <ul class="small-info">
            <li>
              <strong>{{localize "CF.CharacterSheet.Health.AtValue" value=2}}</strong>
              {{localize "CF.CharacterSheet.Health.WhenAt2"}}
            </li>
            <li>
              <strong>{{localize "CF.CharacterSheet.Health.AtValue" value=1}}</strong>
              {{localize "CF.CharacterSheet.Health.WhenAt1"}}
            </li>
            <li>
              <strong>{{localize "CF.CharacterSheet.Health.AtValue" value=0}}</strong>
              {{localize "CF.CharacterSheet.Health.WhenAt0"}}
            </li>
          </ul>
        </div>
      </div>
    </div>

    {{#unless isNpc}}
      {{> "systems/channel-fear/templates/actor/parts/actor-resources.hbs"}}
      {{> "systems/channel-fear/templates/actor/parts/actor-evolution.hbs"}}
    {{/unless}}
  </div>
</div>
